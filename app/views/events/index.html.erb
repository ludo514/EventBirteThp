<!DOCTYPE html>
<html>

	<head>
	</head>

	<body font-family="Arial">
			<div class="jumbotron text-center" style="background-color: #e5e8c6;
			color:  black;">
		        <div class="container">
		          <h1 class="display-3">EVENT BRITE</h1>
		          <% if current_user%>
		          	<h2>Bienvenue <%= current_user.first_name %> !</h2>
		          <%end%>
		          <p>Listes des évenement</p>
		        </div>
		      </div>
			<div class = "container mx-auto">
				<div class="row justify-content-center shadow">
				<% @event.each do |t| %>
						 <div class="col-sm-6 pt-2">
						   <div class="card text-center mx-auto">
						   	<h5 class="card-header"><%= t.title%></h5>
						     <div class="card-body">
						       <p class="card-text">Description: <%= t.description %></p>
						       	<p class="card-text"><strong><%= t.price %>€</strong></p>
						       <p class="card-text text-muted">Date : <%= t.start_date %></p>
						       <p class="card-text text-muted">Durée de l'événement : <%= t.duration %> min </p>
						       <a class="btn btn-primary" href="<%= event_path(t.id)%>">Info</a>
						       <% if user_signed_in? && compare(t.administrator_id, current_user.id)%>
							       	<%=link_to("Supprimez", delete_event_path(t.id), method: :delete, data: { confirm: "Etes vous sure ?"}, class: 'btn btn-danger')%>
						       	<%end%>
						     </div>
						   </div>
						</div>
					<% end %>
				</div>
			
	</body>

</html>
