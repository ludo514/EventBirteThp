<!DOCTYPE html>
<html>
	<head>
		<title></title>
	</head>
	<body>
			<div class="row justify-content-center">
				<div class="card">
					<div>
						<%if @user.avatar.attached?%>
							<div class="col-md-4">
								<%= image_tag @user.avatar, alt: 'avatar', class:"card-img" %>
							</div>
						<%end%>
					</div>
					<div class="card-body">
						<h5 class="card-title"> Prénom : <%=@user.first_name%></h5>
						<p class="card-text">Nom : <%=@user.last_name%></p>
						<p class="card-text">Email : <%=@user.email%></p>
						<p class="card-text">Crée à  : <%=@user.created_at%></p>
						<p class="card-text">Modifier le : <%=@user.updated_at%></p>
						<p class="card-text">Description : <%=@user.description%></p>
						<%= form_tag user_avatars_path(@user), multipart: true do %>
							<%= file_field_tag :avatar %>
							<%= submit_tag "mettre à jour" %>
						<% end %>
					</div>
				</div>
			</div>
	</body>
</html>
